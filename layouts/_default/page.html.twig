<!DOCTYPE html>
<html lang="{{ site.language }}" class="scroll-pt-[70px] scroll-smooth overflow-y-scroll">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    {{- include('partials/metatags.html.twig') ~}}
    <link href="https://fonts.googleapis.com/css?family=Dosis:300,400|Open+Sans:300,400,700|Poppins:400,600&display=swap" rel="stylesheet" />
    <style>{{ asset('styles.css')|inline }}</style>
    <link rel="manifest" href="{{ url('manifest') }}" />
    {%- if site.docsearch.enabled ?? false ~%}
    <link rel="preconnect" href="https://{{ site.docsearch.appId|default }}-dsn.algolia.net" crossorigin />
    {%- endif ~%}
  </head>
  <body class="font-sans antialiased bg-primary-50 dark:bg-primary-950 text-primary-950 dark:text-secondary-100">
    {#- sidebar ~#}
    {%- if page.section == 'docs' ~%}
    {{- include('partials/sidebar.html.twig') ~}}
    {%- endif ~%}
    <div id="cloudy-wrapper" class="hidden fixed top-0 z-40 w-full h-full bg-black opacity-25" onclick="toggleMenu()"></div>
    <header class="fixed top-0 inset-x-0 z-30 flex space-x-3 space-x-reverse items-center h-14 pl-4 pr-1 lg:pl-6 lg:pr-2 py-3 bg-primary-700 dark:bg-primary-900 text-primary-100 hover:text-primary-50 shadow-md">
      <div class="hidden"></div>
      {{- include('partials/menu-title.html.twig') ~}}
      <div class="md:hidden grow"></div>
      {#- DocSearch ~#}
      {%- if site.docsearch.enabled ?? false ~%}
      <div id="search-container" class="md:inline-block py-2"></div>
      {%- endif ~%}
      <div class="hidden md:block grow"></div>
      {#- GitHub link -#}
      {%- if site.github.repo|default ~%}
      <a href="{{ site.github.repo }}" title="{{ site.title }} on GitHub" class="flex no-underline hover:no-underline py-2 items-center">
        <svg class="fill-current text-inherit hover:text-inherit w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 20 20">
          <title>{{ site.title }} on GitHub</title>
          <path d="M10 0a10 10 0 0 0-3.16 19.49c.5.1.68-.22.68-.48l-.01-1.7c-2.78.6-3.37-1.34-3.37-1.34-.46-1.16-1.11-1.47-1.11-1.47-.9-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.9 1.52 2.34 1.08 2.91.83.1-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.94 0-1.1.39-1.99 1.03-2.69a3.6 3.6 0 0 1 .1-2.64s.84-.27 2.75 1.02a9.58 9.58 0 0 1 5 0c1.91-1.3 2.75-1.02 2.75-1.02.55 1.37.2 2.4.1 2.64.64.7 1.03 1.6 1.03 2.69 0 3.84-2.34 4.68-4.57 4.93.36.31.68.92.68 1.85l-.01 2.75c0 .26.18.58.69.48A10 10 0 0 0 10 0"></path>
        </svg>
        <span class="hidden sm:block sm:ml-2">GitHub</span>
      </a>
      {%- endif ~%}
      {#- selectors ~#}
      <div class="flex justify-end space-x-2">
        <div class="hidden sm:block">
          {{- include('partials/theme-selector.html.twig') ~}}
        </div>
        <div class="hidden sm:block">
          {{- include('partials/language-selector.html.twig') ~}}
        </div>
      </div>
    </header>
    <main id="main" class="flex h-full mt-14">
    {%- block content ~%}
      <article class="w-full lg:ml-72 overflow-x-hidden px-4 xl:px-16 py-6">
        {#- article content ~#}
        <section id="content" class="markdown dark:markdown-invert max-w-none">
          {%- block article ~%}
          {{ page.content }}
          {%- endblock article ~%}
        </section>
      </article>
    {%- endblock content ~%}
    </main>
    <footer class="mt-8 mx-4 p-4 text-sm text-center border-t border-t-secondary-300">
      {%- block footer ~%}
      <div>{{ site.footer|replace({'%author%': site.author.name|default('Arnaud Ligny')}) }}</div>
      <div>{% trans %}Powered by{% endtrans %} <a href="{{ cecil.url }}">Cecil</a></div>
      {%- endblock footer ~%}
    </footer>
    {%- block scripts ~%}
    <script>
      {%- apply minify_js ~%}
      function toggleMenu() {
        document.getElementById('sidebar').classList.toggle('-translate-x-full');
        document.getElementById('cloudy-wrapper').classList.toggle('hidden');
        document.getElementById('sidebar-svg1').classList.toggle('hidden');
        document.getElementById('sidebar-svg2').classList.toggle('hidden');
      }
      {%- endapply ~%}
    </script>
    {{ asset('https://cdnjs.cloudflare.com/ajax/libs/highlight.js/' ~ site.highlightjs.version ~ '/styles/github-dark.min.css', {minify: false})|html({title: 'GitHub dark'}, {preload: true}) }}
    <style>
      {%- apply minify_css ~%}
      .hljs {
        background: none;
      }
      code.hljs {
        padding: 0;
      }
      pre code.hljs {
        padding: 0;
      }
      {%- endapply ~%}
    </style>
    {%- if site.docsearch.enabled ?? false ~%}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@docsearch/css@{{ site.docsearch.version }}"/>
    <script src="https://cdn.jsdelivr.net/npm/@docsearch/js@{{ site.docsearch.version }}"></script>
    <script>
      {%- apply minify_js ~%}
      {{- include('partials/docsearch.js.twig') ~}}
      {%- endapply ~%}
    </script>
    {%- endif ~%}
    {{- include('partials/regsw.js.twig', ignore_missing = true) ~}}
    {%- endblock scripts ~%}
  </body>
</html>